<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Natural_99"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:fitsSystemWindows="true">

    <TextView
        android:id="@+id/manga_title_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/missing"
        android:layout_gravity="center"
        android:textColor="?colorOnSurface"
        android:layout_marginTop="@dimen/U_4"
        android:layout_marginBottom="@dimen/U_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Spinner
        android:id="@+id/status_spinner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/U_6"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/U_3"
        android:layout_marginVertical="@dimen/U_10"
        android:background="@drawable/text_input"
        android:elevation="@dimen/U_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/manga_title_selected" />

    <Button
        android:id="@+id/submit_button"
        android:layout_width="@dimen/U_20"
        android:layout_height="@dimen/U_6"
        android:layout_marginBottom="@dimen/U_3"
        android:background="@drawable/submit_button"
        android:elevation="@dimen/U_1"
        android:text="@string/add_comic_submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="?colorOnSecondary"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
