<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Natural_99"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintBottom_toTopOf="@+id/submit_button_jan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/comic_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/form_button_H"
            android:layout_marginBottom="32dp"
            android:autofillHints="MangaName"
            android:background="@drawable/text_input"
            android:elevation="4dp"
            android:hint="@string/add_comic_ch_name"
            android:inputType="text"
            android:paddingStart="16dp"
            android:paddingEnd="0dp"
            android:textColor="?colorOnSurface"
            android:textColorHint="?colorOnSurface" />

        <include layout="@layout/chapter_selector" />


    </LinearLayout>

    <Button
        android:id="@+id/submit_button_jan"
        android:layout_width="@dimen/form_button_W"
        android:layout_height="@dimen/form_button_H"
        android:layout_marginBottom="@dimen/form_button_end_margin"
        android:background="@drawable/submit_button"
        android:elevation="8dp"
        android:text="@string/add_comic_submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/submit_button"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="@dimen/form_button_end_margin"
        android:background="@drawable/add_button"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
