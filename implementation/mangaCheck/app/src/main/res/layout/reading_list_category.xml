<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/basic_surface"
    android:elevation="@dimen/U_half"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/U_2">

    <TextView
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/U_3"
        android:layout_marginTop="@dimen/U_3"
        android:text="@string/missing"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/horizontal_straight_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/U_min"
        android:layout_marginTop="@dimen/U_3"
        android:layout_marginBottom="@dimen/U_3"
        android:background="@drawable/horizontal_straight_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/reading_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:divider="@drawable/empty_space"
        android:showDividers="middle|end"/>
</LinearLayout>
