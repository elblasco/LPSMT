<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/titolo_descrizione_capitolo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/basic_surface"
    android:elevation="@dimen/U_half"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/manga_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/U_2"
        android:layout_marginBottom="@dimen/U_2"
        android:gravity="center"
        android:text="@string/search_dialog_header"
        android:textColor="?colorOnPrimaryContainer" />

    <EditText
        android:id="@+id/chapter_number"
        android:layout_width="match_parent"
        android:layout_height="@dimen/U_5"
        android:layout_marginHorizontal="@dimen/U_3"
        android:layout_marginTop="@dimen/U_1"
        android:layout_marginBottom="@dimen/U_1"
        android:background="@drawable/basic_surface_variant"
        android:drawableEnd="@drawable/search_icon_index_dialog"
        android:hint="@string/search_hint"
        android:drawablePadding="@dimen/U_2"
        android:inputType="number"
        android:textAlignment="textStart"
        android:textColor="?colorOnSurfaceVariant"
        android:textColorHint="?colorOnSurfaceVariant"
        android:autofillHints="Page Index"
        />
</LinearLayout>
