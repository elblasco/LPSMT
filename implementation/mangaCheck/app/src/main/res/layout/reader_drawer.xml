<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?colorSurfaceInverse">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:id="@+id/previous"
            android:layout_width="@dimen/card_icon_button"
            android:layout_height="@dimen/card_icon_button"
            android:background="@drawable/previous_icon_reader"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/page_previous"
            android:layout_gravity="center"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:id="@+id/search"
            android:layout_width="@dimen/card_icon_button"
            android:layout_height="@dimen/card_icon_button"
            android:background="@drawable/search_icon_reader"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/page_search"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:id="@+id/forward"
            android:layout_width="@dimen/card_icon_button"
            android:layout_height="@dimen/card_icon_button"
            android:layout_gravity="center"
            android:background="@drawable/forward_icon_reader"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/page_forward"
            android:layout_gravity="center"/>
    </LinearLayout>

</LinearLayout>