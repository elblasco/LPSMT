<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/reading_list_entry_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/U_7"
    android:clickable="true"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_circle"
        android:layout_width="@dimen/U_6"
        android:layout_height="@dimen/U_6"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/U_1"
        android:background="@drawable/reading_list_circle"
        android:gravity="center"
        android:text="@string/missing"
        android:textColor="?colorOnPrimaryContainer" />

    <TextView
        android:id="@+id/manga_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/U_2"
        android:text="@string/missing"
        android:textColor="?colorOnSurface" />

    <TextView
        android:id="@+id/chapter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/U_2"
        android:gravity="end"
        android:text="@string/missing"
        android:textColor="?colorOnSurface" />

</LinearLayout>


