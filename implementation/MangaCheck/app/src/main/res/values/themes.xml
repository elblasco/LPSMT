<resources>
    <!-- Base application theme. -->
    <style name="Theme.MangaCheck" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary colors. -->
        <item name="colorPrimary">@color/primary_35</item>
        <item name="colorPrimaryContainer">@color/primary_80</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnPrimaryContainer">@color/primary_20</item>

        <!-- Secondary colors. -->
        <item name="colorSecondary">@color/secondary_35</item>
        <item name="colorSecondaryContainer">@color/secondary_80</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnSecondaryContainer">@color/secondary_20</item>

        <!-- Tertiary colors. -->
        <item name="colorTertiary">@color/tertiary_35</item>
        <item name="colorTertiaryContainer">@color/tertiary_80</item>
        <item name="colorOnTertiary">@color/white</item>
        <item name="colorOnTertiaryContainer">@color/tertiary_20</item>

        <!-- Error colors. -->
        <item name="colorError">@color/error_35</item>
        <item name="colorErrorContainer">@color/error_80</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorOnErrorContainer">@color/error_20</item>

        <!-- Background colors. -->
        <item name="backgroundColor">@color/Natural_95</item>
        <item name="colorOnBackground">@color/Natural_10</item>

        <!-- Surface colors. -->
        <item name="colorSurface">@color/Natural_95</item>
        <item name="colorOnSurface">@color/Natural_10</item>
        <item name="colorSurfaceInverse">@color/Natural_20</item>

        <!-- Surface Variant colors. -->
        <item name="colorSurfaceVariant">@color/VNatural_90</item>
        <item name="colorOnSurfaceVariant">@color/VNatural_30</item>

        <item name="colorOutline">@color/VNatural_50</item>
        <item name="colorOutlineVariant">@color/VNatural_80</item>

        <item name="android:spinnerItemStyle">@style/mySpinnerItemSelectedStyleLight</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyleLight</item>

        <item name="android:navigationBarColor">?colorSurface</item>
        <item name="android:statusBarColor">?colorSurface</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    </style>

    <style name="DrawerArrowStyleLight" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">?colorOnPrimaryContainer</item>
    </style>

    <style name="mySpinnerItemSelectedStyleLight" parent="@android:style/Widget.Holo.TextView.SpinnerItem">
        <item name="android:textColor">?colorOnSurfaceVariant</item>
    </style>

    <style name="Theme.MangaCheck.Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">14sp</item>
    </style>

</resources>